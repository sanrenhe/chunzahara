<%- include chun_header %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/chunzahara/css/default.css">
    <link href="/stylesheets/chunzahara/css/fileinput.css" media="all" rel="stylesheet" type="text/css" /> 
    <link href="/stylesheets/chunzahara/css/magicsuggest-min.css" rel="stylesheet">
    <script src="/stylesheets/chunzahara/js/magicsuggest-min.js"></script>
    <link rel="stylesheet" href="/stylesheets/chunzahara/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/chunzahara/css/build.css">
    <div id="contact">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4 text-center">
                    <h2>Upload</h2>
                    <hr>
                </div>
                <div class="col-md-5 col-md-offset-3">
                    <form method="post" action="/chun_upload" enctype='multipart/form-data' id="contact-form" class="form-horizontal">
                        <fieldset>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="name">Image Name</label>
                                <div class="col-sm-8">
                                    <input type="text" placeholder="Your Name" class="form-control"  name="title">
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="email">Choose Image</label>
                                <div class="col-sm-8">
	                                <div class="htmleaf-container">
				                        <div class="container kv-main">
				                            <div class="form-group">
				                                <input id="file-3" type="file" multiple=true name="field1">
				                            </div>
				                        </div>
				                    </div>
	                            </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="email">Choose Image Album</label>
                                <div class="radio radio-danger radio-inline">
                                    <input type="radio" id="inlineRadio1" value="wardrobe" name="imageAlbum" checked="">
                                    <label for="inlineRadio1"> 衣橱专辑 </label>
                                </div>                                
                                <div class="radio radio-info radio-inline">
			                        <input type="radio" id="inlineRadio2" value="covers" name="imageAlbum">
			                        <label for="inlineRadio2"> 封面专辑 </label>
			                    </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="message">Image Type</label>
                                <div class="col-sm-8">
                                    <div class="ms-ctn form-control  ms-ctn-focus" style="" id="ms1"><span class="ms-helper " style="display: none;"></span><div class="ms-sel-ctn"><input type="text" class="" placeholder="Type or click here" style="width: 227px;" value="[3,5,6,7,39]"><div style="display: none;"></div></div><div class="ms-trigger"><div class="ms-trigger-ico"></div></div></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-4 control-label" for="message">Image Message</label>
                                <div class="col-sm-8">
                                    <textarea placeholder="Please Type Your Message" class="form-control" name="post" id="message" rows="3">可耐滴宝宝 宝宝大美铝</textarea>
                                </div>
                            </div>
                            <div class="col-sm-offset-4 col-sm-8">
                                <button type="submit" class="btn btn-success">Submit</button>
                                <button type="reset" class="btn btn-primary" onclick="history.go(-1)">Cancel</button>
                            </div>
                            <% if (success) { %>
        <div class="alert alert-info">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong><%= success %>
        </div>
                <% } %>
                <% if (error) { %>
        <div class="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            <strong>Warning!</strong><%= error %>
        </div>
                <% } %>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="/stylesheets/chunzahara/js/fileinput.js" type="text/javascript"></script>
    <script src="/stylesheets/chunzahara/js/editor.js"></script>
    <script>
    $("#file-3").fileinput({
      showUpload: false,
      showCaption: false,
      browseClass: "btn btn-primary btn-lg",
      fileType: "any",
          previewFileIcon: "<i class='glyphicon glyphicon-king'></i>"
    });
      $(document).ready(function() {
          $("#test-upload").fileinput({
              'showPreview' : false,
              'allowedFileExtensions' : ['jpg', 'png','gif'],
              'elErrorContainer': '#errorBlock'
          });
          $("#txtEditor").Editor();
      });

      $(function() {
      	var count = 0;
        var ms1 = $('#ms1').magicSuggest({
          data: [{id: '0', value: '连衣裙'},{id: '1', value: '小黑裙'},{id: '2', value: '衬衣'},{id: '3', value: '打底'},{id: '4', value: '小西装'},{id: '5', value: '半裙'},{id: '6', value: '开衫'},{id: '7', value: '裤子'},{id: '8', value: '大衣'},{id: '9', value: '运动服'},{id: '10', value: '围巾'},{id: '11', value: '鞋子'},{id: '12', value: '皮包'},{id: '13', value: '帽子'},{id: '14', value: '手套'},{id: '15', value: '腰带'},{id: '16', value: '眼镜'},{id: '17', value: '配饰'},{id: '18', value: '香水'},{id: '19', value: '护肤'},{id: '20', value: '彩妆'},{id: '21', value: '药品'}],
          allowFreeEntries: 'false',
          maxSelection: 5,
          value: [{id: '0', value: '连衣裙'}],
          renderer: function(data) {
          	return '<input type="hidden">' + data.value + '</input>' + '<li role="separator" class="divider"></li>'
          },
          selectionRenderer: function(data) {
          	return '<input name="tags" type="hidden" value="' + data.id + '-' + data.value  + '">' + data.value + '</input>';
          }
        });
      });
    </script>
<%- include chun_footer %>